@model List<Director>
@{
    ViewData["Title"] = "Country_Directors";
}

<div class="row">
    @if (Model == null || Model.Count == 0)
    {
        <h1>There is not result.</h1>
    }
    @foreach (var item in Model)
    {
        <div class="col-3">

            <div class="card" style="width: 18rem;">
                <img src="~/Images/@(item.DirectorImage).jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    @{
                        string Name = item.DirectorFullName.Length > 15 ? item.DirectorFullName.Substring(0, 15) + "..." :
                        item.DirectorFullName;
                    }
                    <h5 class="card-title">@Name</h5>
                    <p class="card-text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ad unde impedit
                        repudiandae?</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Birth: @item.DateTime</li>
                    <li class="list-group-item">Country: @item.Country.CountryName <img style="width: 15%;"
                            class="card-img-top rounded" src="~/Images/@(item.Country.CountryImage).jpg"></li>
                </ul>

            </div>
        </div>
    }
</div>