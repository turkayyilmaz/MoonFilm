@model List<Director>
@{
    ViewData["Title"] = "Director";
}
<h1>Directors</h1>
<hr>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <img src="~/Images/@(item.DirectorImage).jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    @{
                        string Name = item.DirectorFullName.Length > 15 ? item.DirectorFullName.Substring(0, 15) + "..." :
                        item.DirectorFullName;
                    }
                    <h5 class="card-title">@Name</h5>
                    <p class="card-text">Birth: @item.DateTime.ToString("yyyy.MM.dd") Country: @item.Country.CountryName
                    </p>
                    <a asp-controller="Default" asp-action="DirectorDetail" asp-route-id="@item.DirectorId"
                        class="btn btn-primary">See the Projects</a>
                </div>
            </div>
        </div>
    }
</div>